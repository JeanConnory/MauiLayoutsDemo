<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="EfeitoTransparente.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:acrylic="clr-namespace:Xe.AcrylicView;assembly=Xe.AcrylicView">

    <ScrollView>
        <Grid>
            <Image Aspect="Fill" Source="https://plus.unsplash.com/premium_photo-1680806490620-b5bb8b693f89" />
            <VerticalStackLayout>
                <Border
                    Margin="20"
                    BackgroundColor="#66FFFFFF"
                    HeightRequest="200"
                    StrokeThickness="0"
                    VerticalOptions="Start" />

                <acrylic:AcrylicView
                    Margin="20"
                    EffectStyle="Light"
                    HeightRequest="100"
                    VerticalOptions="Center">
                    <Label Padding="20" Text="Ola mundo!" />
                </acrylic:AcrylicView>

                <acrylic:AcrylicView
                    Margin="20"
                    EffectStyle="Custom"
                    HeightRequest="100"
                    TintColor="Black"
                    TintOpacity=".15"
                    VerticalOptions="Center">
                    <Label Padding="20" Text="Ola mundo!" />
                </acrylic:AcrylicView>

            </VerticalStackLayout>
        </Grid>
    </ScrollView>

</ContentPage>
